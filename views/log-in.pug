extends layout

block content
	h1= title
	div.log-in-form
		form(method='POST' action='')
			label(for='username') Username
			input#username(type='text' name='username' minlength=4 maxlength=16 placeholder='Username' required=true)
			label(for='password') Password
			input#password(type='password' name='password' minlength=4 maxlength=16 placeholder='Password' required=true)
			button.btn-submit(type='submit') Submit

		if errors
			ol.errors-msg
				for error in errors
					li!= error.msg
