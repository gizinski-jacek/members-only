extends layout

block content
	h1= title
	form(method='POST' action='')
		label(for='firstname') First name
		input#firstname(type='text' name='firstname' minlength=2 maxlength=16 placeholder='First name' required=true)
		label(for='lastname') Last name
		input#lastname(type='text' name='lastname' minlength=2 maxlength=16 placeholder='Last name' required=true)
		label(for='username') Username
		input#username(type='text' name='username' minlength=4 maxlength=16 placeholder='Username' required=true)
		label(for='password') Password
		input#password(type='password' name='password' minlength=4 maxlength=16 placeholder='Password' required=true)
		button(type='submit') Submit

	if errors
		ol.errors-msg
			for error in errors
				li!= error.msg
